<h1>Post your available space</h1>
<form action="/listing/create" enctype="multipart/form-data" method="post">
<fieldset class="sep-bottom">
    <div class="big input">
        <label for="name">The Name of Your Space </label>
        <input type="text" name="name" id="name">
        
        <div class="clear"></div>
    </div>
    <div class="big input">
        <label for="description">Describe Your Space in Detail </label>
        <textarea name="description" id="description"></textarea>

        <div class="clear"></div>
    </div>
    <div class="input">
        <label for="tagline">Now the Short Version <span class="note">Which Will be Used for searching</span> </label>
        <textarea name="tagline" id="tagline"></textarea>

        <div class="clear"></div>
    </div>
</fieldset>
<fieldset id="images" class="sep-bottom">
    <legend>Images</legend>
    <input type="file" id="image" name="image" multiple="multiple">

    <div class="clear"></div>
</fieldset>
<fieldset id="address" class="sep-bottom">
    <legend>Address</legend>
    <div class="lines">
        <div class="input">
            <label for="">Line 1 </label>
            <input type="text" name="address1" id="address1">

            <div class="clear"></div>
        </div>
        <div class="input">
            <label for="">Line 2 </label>
            <input type="text" name="address2" id="address2">

            <div class="clear"></div>
        </div>
    </div>
    <div class="grouped">
        <div class="input">
            <label for="">City </label>
            <input type="text" name="city" id="city">
        </div>
        <div class="input">
            <label for="">Province </label>
            <input type="text" name="province" id="province">
        </div>
        <div class="input">
            <label for="">Postal Code </label>
            <input type="text" name="postalCode" id="postalCode">
        </div>
    </div>
</fieldset>
<fieldset id="contact-info" class="sep-bottom">
    <legend>Contact info</legend>
    <div class="input">
        <label for="">Contact Email </label>
        <input type="email" name="email" id="email">

        <div class="clear"></div>
    </div>
    <div class="grouped">
        <div class="input">
            <label for="">Phone Number </label>
            <input type="phone" name="phone" id="phone">
        </div>
        <div class="input">
            <label for="">Website </label>
            <input type="text" name="website" id="website">
        </div>
        <div class="input">
            <label for="">Twitter </label>
            <input type="text" name="twitter" id="twitter">
        </div>
        <div class="clear"></div>
    </div>
</fieldset>
<fieldset id="availability" class="sep-bottom">
    <legend>Availability</legend>
    <div class="grouped">
        <div class="input">
            <label for="">Start Date </label>
            <input type="date" name="startDate" id="startDate">

            <div class="clear"></div>
        </div>
        <div class="input">
            <label for="">End Date </label>
            <input type="date" name="endDate" id="endDate">

            <div class="clear"></div>
        </div>
        <div class="input">
            <label for="">Number of Podz </label>
            <select name="spaces" id="spaces">
                <option value="1" selected>1 Pod</option>
                <option value="2">2 Podz</option>
                <option value="3">3 Podz</option>
                <option value="4">4 Podz</option>
                <option value="5">5 Podz</option>
                <option value="6">6 Podz</option>
                <option value="7">7 Podz</option>
                <option value="8">8 Podz</option>
                <option value="9">9 Podz</option>
                <option value="10">10+ Podz</option>
            </select>

            <div class="clear"></div>
        </div>
    </div>
</fieldset>
<fieldset class="sep-bottom">
    <legend>Finally...</legend>
    <div class="input">
        <label for="">Tags <span class="note"></span> </label>
        <ul id="tags" name="tags" class="tagit"></ul>

        <div class="clear"></div>
    </div>
    <div class="input">
        <label for="">Price </label>
        <input type="text" name="price" id="price" value="Free">

        <div class="clear"></div>
    </div>
</fieldset>
<div class="input submit">
    <input type="submit" value="Create and Publish your Space">

    <div class="clear"></div>
</div>
</form>
<script src="/js/forms.js" type="text/javascript" charset="utf-8"></script>
<script src="/js/jquery/jquery-ui.min.js" type="text/javascript" charset="utf-8"></script>
<link rel="stylesheet" href="/css/ui-lightness/jquery-ui.css" type="text/css" media="screen" charset="utf-8">


<script type="text/javascript">

$(document).ready(function() {
    $('#tags').tagit({
        select : true, 
        triggerKeys: ['enter', 'comma', 'tab', 'space'], 
        tagSource: function( request, response ) {
			$.ajax({
				url: '/tag/autocomplete.json',
				dataType: "json",
				data: {
					limit: 10,
					contains: request.term
				},
				success: function( data ) {
					response( $.map( data, function( item ) {
						return {
							label: item.name,
							value: item.name
						}
					}));
				}
			});
		},
		minLength: 1
    });
});
</script>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>Sharepodz</title>
	<meta name="description" content="">
	<meta name="author" content="">

	<meta name="viewport" content="width=device-width,initial-scale=1">

	<link rel="stylesheet" type="text/css" href="/css/style.css" />
	<link rel="stylesheet" type="text/css" href="/css/layout.css" />
	<link rel="stylesheet" type="text/css" href="/css/tags.css" />
    <link rel="stylesheet" type="text/css" href="/css/ui-theme/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="/css/thickbox.css" />
</head>
<body>
	<div class="container">
		<header id="top">
	        <div class="logo">
	            <a href="/">
	                <img src="/images/layout/logo.gif" alt="SharePodz"/>
	                <strong class="tagline">An Accelerator<span class="yyc">YCC</span> Project</strong>
	            </a>
	        </div>
	        <ul id="secondary-nav">
	            {{#loggedInUser}}<li class="rounded-b-left"><a href="/logout">Logout</a></li>{{/loggedInUser}}
	            {{^loggedInUser}}<li class="rounded-b-left login"><a href="/login">Login</a></li>{{/loggedInUser}}
	            <li class="search rounded-b-right"><a class="thickbox" href="/listing/search?TB_iframe=true&width=760&height=500">Search</a></li>
	        </ul>
	        <ul id="menu">
	            <li><a href="/listing/browse">podz</a></li>
	            <li><a href="/listing/new">host</a></li>
	            <li><a href="/about">about</a></li>
	        </ul>
		</header>
	</div>
	
	<div id="promo" class="{{#is_home}} home{{/is_home}}{{^is_home}} bubble{{/is_home}}">
		{{#is_home}}
	    <ul>
	        <li>
	            <img src="../images/layout/slide01.jpg" width="526" height="361" alt="">
	            <div class="overlay"></div>
	        </li>
	        <li>
	            <img src="../images/layout/slide01.jpg" width="526" height="361" alt="">
	            <div class="overlay"></div>
	        </li>
	        <li>
	            <img src="../images/layout/slide01.jpg" width="526" height="361" alt="">
	            <div class="overlay"></div>
	        </li>
	    </ul>
		{{/is_home}}
	    <div class="container">
	        <h1{{#is_home}} class="bubble"{{/is_home}}>Sharepodz Helps Entrepreneurs find Shared Workspaces at Top Start-Ups Across Canada</h1>
	        {{#is_home}}
	        <div class="cta bubble">
	            <a class="thickbox" href="/listing/search?TB_iframe=true&width=760&height=500">Find a Workspace!</a>
	            <div class="speech"></div>
	        </div>
	        
	        {{/is_home}}
	    </div>
	</div>
	
	<div class="container">
		<div id="main" role="main">
		    {{#flash}}
	            {{#error}}<div class="error">{{.}}</div>{{/error}}
	            {{#info}}<div>{{.}}</div>{{/info}}
	        {{/flash}}
	        {{{yield}}}
	    </div>
	</div>
	
	<footer class="clearfix">
		<div class="container">
			<img src="/images/sponsors/joyent.png" alt="Joyent" />
			<img src="/images/sponsors/github.png" alt="Github" />
			<img src="/images/sponsors/acceleratoryyc.png" alt="AcceleratorYYC" />
			<img src="/images/sponsors/steamwhistle.png" alt="Steamwhistle" />
			<img src="/images/sponsors/redbull.png" alt="RedBull Canada" />
		</div>
	</footer>
	
	<script type="text/javascript" src="/js/jquery/jquery.min.js"></script>
	<script src="/js/jquery/jquery-ui.min.js"></script>
	<script src="/js/forms.js" type="text/javascript" charset="utf-8"></script>
	<script src="/js/main.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript" src="/scripts/gvmaps.min-0.9.3.js"></script>
    <script type="text/javascript" src="/scripts/galleria/galleria-1.2.5.min.js"></script>
    <script type="text/javascript" src="/js/tagit.js"></script>
    <!-- Search results page scripts -->
    <script src="/js/search_results.js" type="text/javascript"></script>
    <!-- Search-related scripts -->
    <script src="/js/thickbox-compressed.js" type="text/javascript"></script>
    <!-- Slideshow -->
    <script src="/js/home.js" type="text/javascript"></script>
</body> 
</html> 
